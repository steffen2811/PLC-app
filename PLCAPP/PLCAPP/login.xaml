<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PLCAPP.login">
    <ContentPage.Content>
        <StackLayout VerticalOptions="Center">
            <Label Text="Brugernavn" />
            <Entry x:Name="usernameEntry" Placeholder="Brugernavn" />
            <Label Text="Password" />
            <Entry x:Name="passwordEntry" IsPassword="true" Placeholder="password"/>
            <Button Text="Login" Clicked="b_Login" />
            <Label x:Name="messageLabel" YAlign="Center" XAlign="Center" FontSize="Large"/>
        </StackLayout>
    </ContentPage.Content>


</ContentPage>